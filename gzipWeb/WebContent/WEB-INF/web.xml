<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>gzipWeb</display-name>
	<filter>
		<description>中文乱码的过滤器</description>
		<filter-name>characterFilter</filter-name>
		<filter-class>cn.hncu.filter.CharacterFilter</filter-class>
		<init-param>
			<description>字符编码参数</description>
			<param-name>charset</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter>
		<description>压缩字节数据的过滤器</description>
		<filter-name>gzip1Filter</filter-name>
		<filter-class>cn.hncu.filter.Gzip1Filter</filter-class>
	</filter>
	<filter>
		<description>压缩字符数据的过滤器</description>
		<filter-name>gzip2Filter</filter-name>
		<filter-class>cn.hncu.filter.Gzip2Filter</filter-class>
	</filter>
	<filter>
		<description>全站压缩，字节字符流都压缩</description>
		<filter-name>gzipAllFilter</filter-name>
		<filter-class>cn.hncu.filter.GzipAllFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>characterFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>gzipAllFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- 
	<filter-mapping>
		<filter-name>gzip1Filter</filter-name>
		<servlet-name>OneServlet</servlet-name>
	</filter-mapping>
	<filter-mapping>
		<filter-name>gzip2Filter</filter-name>
		<servlet-name>TwoServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	 -->
	<servlet>
		<servlet-name>OneServlet</servlet-name>
		<servlet-class>cn.hncu.servlet.OneServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TwoServlet</servlet-name>
		<servlet-class>cn.hncu.servlet.TwoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>OneServlet</servlet-name>
		<url-pattern>/OneServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TwoServlet</servlet-name>
		<url-pattern>/TwoServlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>